{
  "manifest_version": 2,

  "name": "Gistify",
  "description": "This extension searches for gist URLs in a page and replaces them with embedded gists.",
  "version": "1.0",
  "background": {
    "persistent": true,
    "scripts": ["background.js"]
  },
  "icons": {
    "16" : "icon16.png",
    "48" : "icon48.png",
    "128": "icon128.png"
  },
  "browser_action": {
    "default_icon" : "icon48.png",
    "default_title": "Find Gists!"
  },
  "permissions": [
    "activeTab",
    "*://*.github.com/"
  ]
}
